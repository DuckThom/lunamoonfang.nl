<% content_for :title do %>
    Account
<% end %>

<div class="content">
  <div class="row">
    <div class="text-center">
      <h3>Upload</h3>
    </div>

    <hr />

    <div class="row">
      <div class="small-6 small-centered columns">
        <%= form_tag('upload/image', :multipart => true) do %>
            <label for="file">Select File</label>
            <%= file_field 'upload', 'file' %>

            <button type="submit" class="large expanded success button">Upload</button>
        <% end %>
      </div>
    </div>
  </div>
</div>